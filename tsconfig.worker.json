{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "outDir": "./dist-workers",
    "rootDir": "./",
    "baseUrl": ".",
    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": false,
    "composite": false,
    "moduleResolution": "nodenext",
  },
  "include": [
    "workers/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}