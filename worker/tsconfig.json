{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"],
      "@/emails/*": ["./dist/emails/*"]
    },
    "module": "es2020",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"  // Reference parent node_modules
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}