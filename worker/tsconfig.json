{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "preserve",  // Essential for JSX
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types"  // Reference parent node_modules
    ],
    "baseUrl": ".",
    "paths": {
      "@/emails/*": ["./dist/emails/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.tsx"]
}