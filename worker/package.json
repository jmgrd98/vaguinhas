{
  "name": "email-worker",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build:emails": "tsc -p tsconfig.emails.json",
    "prebuild": "npm install && tsc-alias npm run build:emails",
    "build": "tsc --project tsconfig.json",
    "postbuild": "mkdir -p dist/emails && cp ../emails/*.tsx dist/emails/ && node rewrite-imports.cjs",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@react-email/components": "0.4.0",
    "@react-email/render": "1.1.4",
    "bullmq": "5.56.9",
    "dotenv": "16.6.1",
    "ioredis": "5.7.0",
    "nodemailer": "6.10.1",
    "react": "^19.1.1",
    "tsc-alias": "^1.8.8"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/nodemailer": "6.4.17",
    "@types/react": "^19.1.9",
    "@types/react-dom": "19.1.7",
    "ts-node": "10.9.2",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "@types/node": "20.11.0"
  }
}
